---
import { projects } from "../../config/projects.json";
---

<h1 class="font-bold text-5xl my-8 text-center">Proyectos</h1>

{
  projects.map((project) => (
    <div class="flex flex-col mb-2 text-center md:text-left gap-y-3 md:flex-row">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4">{project.title}</h2>
        <p class="my-2">{project.description}</p>
        <button class="bg-indigo-500 hover:bg-indigo-400 px-3 py-2"
        >MÃ¡s info</button>
      </div>
      <div class="flex-1">
        <img src={project.image} alt="imagen proyecto" class="w-72 m-auto" />
      </div>

    </div>
  ))
}
